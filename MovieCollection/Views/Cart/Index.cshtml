@model List<CartItem>

<h2>Ваша корзина</h2>

@if (Model.Count == 0)
{
        <p>Корзина пуста</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Фильм</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.Movie.Title</td>
                            <td>@item.Movie.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="movieId" value="@item.MovieId" />
                                    <button type="submit" class="btn btn-danger">Удалить</button>
                                </form>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}