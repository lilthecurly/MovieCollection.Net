@model IEnumerable<MovieCollection.Models.Movie>

<h1>Список фильмов</h1>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Поиск по названию" />
        <button type="submit" class="btn btn-primary">Найти</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Добавить фильм</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Название</th>
            <th>Год</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Category?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Удалить</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
            <a href="@Url.Action("Index", new { page = i })" class="btn btn-outline-primary @(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
    }
</div>