@model IEnumerable<MovieCollection.Models.Category>

<h1>Список категорий</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Добавить категорию</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Удалить</a>
                    </td>
                </tr>
        }
    </tbody>
</table>